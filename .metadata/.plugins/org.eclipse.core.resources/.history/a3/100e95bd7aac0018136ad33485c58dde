			public void actionPerformed(ActionEvent e) {
			String id=textField.getText();
			String name=textField_1.getText();
			String designation=textField_2.getText();
			String ctc=textField_3.getText();
			String dob=textField_4.getText();
			String date_of_joining=textField_5.getText();
			
			int i=EmployeeDao.update(id, name, designation, ctc, dob, date_of_joining);
			if(i>0){
				JOptionPane.showMessageDialog(UpdateEmployee.this,"Employee updated successfully!");
				frame.dispose();
				
			}else{
				JOptionPane.showMessageDialog(UpdateEmployee.this,"Sorry, unable to update!");
			}
			}
		});
		
