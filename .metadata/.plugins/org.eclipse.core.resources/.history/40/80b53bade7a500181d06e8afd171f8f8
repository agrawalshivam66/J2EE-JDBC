public class EmployeeForm extends JFrame {
	static EmployeeForm frame;
	private JPanel contentPane;
	private JTextField textField;
	private JTextField textField_1;
	private JTextField textField_2;
	private JTextField textField_3;
	private JTextField textField_4;
	private JTextField textField_5;
	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					frame = new EmployeeForm();
					frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the frame.
	 */
	public EmployeeForm() {
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 450, 404);
		contentPane = new JPanel();
		contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));
		setContentPane(contentPane);
		
		JLabel lblAddBooks = new JLabel("Add Employee");
		lblAddBooks.setForeground(Color.GRAY);
		lblAddBooks.setFont(new Font("Tahoma", Font.PLAIN, 18));
		
		JLabel lbl_ID = new JLabel("ID");
		
		JLabel lbl_Name = new JLabel("Name:");
		
		JLabel lbl_designation = new JLabel("Designation");
		
		JLabel lbl_ctc = new JLabel("CTC");
		
		JLabel lbl_Dob = new JLabel("Date of birth");
		
		JLabel lbldate_of_joining = new JLabel("Date of joining");
	
		
		textField = new JTextField();
		textField.setColumns(50);
		
		textField_1 = new JTextField();
		textField_1.setColumns(50);
		
		textField_2 = new JTextField();
		textField_2.setColumns(50);
		
		textField_3 = new JTextField();
		textField_3.setColumns(50);
		
		textField_4 = new JTextField();
		textField_4.setColumns(50);
		
		textField_5 = new JTextField();
		textField_5.setColumns(50);
		
		JButton btnAddBooks = new JButton("Add Employee");
		btnAddBooks.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
			String id=textField.getText();
			String name=textField_1.getText();
			String designation=textField_2.getText();
			String ctc=textField_3.getText();
			String dob=textField_4.getText();
			String date_of_joining=textField_5.getText();
			
			int i=EmployeeDao.save(id, name, designation, ctc, dob, date_of_joining);
			if(i>0){
				JOptionPane.showMessageDialog(EmployeeForm.this,"Employee added successfully!");
				frame.dispose();
				
			}else{
				JOptionPane.showMessageDialog(EmployeeForm.this,"Sorry, unable to save!");
			}
			}
		});
		
		JButton btnBack = new JButton("Back");
		btnBack.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				frame.dispose();
			}
		});
